{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",

    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.js", "dist"]
}